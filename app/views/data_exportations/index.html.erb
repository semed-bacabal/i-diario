<div class="widget-body">
  <div class="row">
    <div class="col col-sm-12">
      <%= simple_form_for @last_full_system_backup, url: data_exportations_path, method: :post,
        html: { class: 'smart-form' } do |f| %>

        <%= f.error_notification %>

        <table class="table table-striped table-bordered table-condensed">
          <thead>
            <tr>
              <th>Tipo</th>
              <th>Informações</th>
              <th>Último Backup</th>
              <th style="width: 1%;"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Backup</td>
              <td>Exporta os dados de todas as telas/tabelas do sistema</td>
              <td>
                <%= backup_status_message(@last_full_system_backup) %>
              </td>
              <td>
                <%= backup_button_or_status(f,  @last_full_system_backup, "full_system_backup") %>
              </td>
            </tr>
            <tr>
              <td>Calendários letivos</td>
              <td>
                Exporta todos os calendários letivos do ano no filtro (etapas, datas, quantidade de lançamentos)
              </td>
              <td>
                <%= backup_status_message(@last_school_calendar_backup) %>
              </td>
              <td>
                <%= backup_button_or_status(f, @last_school_calendar_backup, "school_calendar_backup") %>
              </td>
            </tr>
            <tr>
              <td>Acompanhamento pedagógico</td>
              <td>
                Exporta todos os dias que estão sendo contabilizados no acompanhamento pedagógico
              </td>
              <td>
                <%= backup_status_message(@last_unique_school_days_backup) %>
              </td>
              <td>
                <%= backup_button_or_status(f, @last_unique_school_days_backup, "unique_school_days_backup") %>
              </td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
